{
	"name": "support-chat-rrv7-framework",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"dev": "react-router dev",
		"start": "react-router-serve ./build/server/index.js",
		"typecheck": "react-router typegen && tsc",
		"check": "biome check ./app",
		"check:fix": "biome check --write ./app",
		"format:check": "biome format ./app",
		"format:fix": "biome format --write ./app",
		"lint:check": "biome lint ./app",
		"lint:fix": "biome lint --write ./app",
		"prepare": "husky"
	},
	"dependencies": {
		"@react-router/node": "^7.7.1",
		"@react-router/serve": "^7.7.1",
		"isbot": "^5.1.27",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router": "^7.7.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@react-router/dev": "^7.7.1",
		"@tailwindcss/vite": "^4.1.4",
		"@types/node": "^20",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.4",
		"tailwindcss": "^4.1.4",
		"typescript": "^5.8.3",
		"vite": "^6.3.3",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
